        </record>




        <record model="ir.ui.view" id="is_charge_ressource_week_graph_view" >
            <field name="name">is_charge_ressource_week_graph_view</field>
            <field name="model">is.dispo.ressource</field>
            <field name="arch" type="xml">
                <graph string="Graph"> 
