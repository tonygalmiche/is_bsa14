                    <field name="is_sale_order_id"/>
                    <field name="ordre_id"/>
                    <field name="line_id"/>
                    <field name="workcenter_id"/>
                </search>
            </field>
        </record>

        <!-- Suivi du temps passé par affaire -->
        <record id="is_suivi_temps_passe_affaire_graph_view" model="ir.ui.view">
