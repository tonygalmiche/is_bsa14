<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="is_email_compose_message_wizard_form">
            <field name="name">mail.compose.message.form</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='attachment_ids']" position="after">
                    <field name="attachment_selection_ids">
                        <tree string="Attach a file" editable="bottom">
                             <!-- <field name="directory_id" options="{'no_create': True}"/> -->
                            <!-- ('parent_id','=',directory_id), -->
                             <field 
                                name="attachment_ids" widget="many2many_tags" 
                                domain="[
                                    ('name','not like','.xls'),
                                    ('name','not like','.xlsx'),
                                    ('name','not like','.ods'),
                                ]" 
                                options="{'no_create': True}"
                            />
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
