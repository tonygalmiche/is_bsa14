                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content" style="background-color:white;margin:0.5em;padding:0.5em">
                                <h4><a type="open"><field name="name"/></a> <field name="is_nom_affaire"/></h4>
                                <ul>
