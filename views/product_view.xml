        </record>
        <record model="ir.actions.act_window" id="stock.product_template_action_product">
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,kanban,form,activity</field>
        </record>
        <record model="ir.actions.act_window" id="mrp.product_template_action">
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,kanban,form,activity</field>
        </record>
        <record model="ir.actions.act_window" id="mrp.mrp_product_variant_action">
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,kanban,form,activity</field>
        </record>



        <!-- product.product -->
        <record id="is_product_normal_form_view" model="ir.ui.view">
            <field name="name">is_product_normal_form_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="type" position="before">
                    <field name="product_tmpl_id"/>
                    <field name="is_production_count"/>
                    <field name="is_pmp_odoo8"/>
                </field>                
            </field>
        </record>


        <record id="open_mrp_production_action" model="ir.actions.act_window">
            <field name="context">{'default_product_id': active_id, 'search_default_product_id': active_id}</field>
            <field name="name">Fabrications</field>
            <field name="res_model">mrp.production</field>
        </record>


        <record id="is_product_product_form_view_bom_button" model="ir.ui.view">
            <field name="name">is_product_product_form_view_bom_button</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="mrp.product_product_form_view_bom_button" />
            <field name="arch" type="xml">
                <button name="action_view_mos" position="after">
                    <button class="oe_stat_button" name="%(open_mrp_production_action)d" type="action"
                        attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}" icon="fa-list-alt">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field string="Productions" name="is_production_count" widget="statinfo" />
                            </span>
                            <span class="o_stat_text">Productions</span>
                        </div>
                    </button>
                </button>
            </field>
        </record>
        <record id="is_product_product_tree_view" model="ir.ui.view">
            <field name="name">is_product_product_tree_view</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="default_code"/>
                    <field name="uom_id"/>
                    <field name="list_price"/>
                    <field name="standard_price"/>
                    <field name="qty_available"                sum="Total" string="Quantité disponible"/>
                    <field name="virtual_available"            sum="Total" string="Quantité prévue"/>
                    <field name="is_stock_disponible_valorise" sum="Total"/>
                    <field name="is_stock_prevu_valorise"      sum="Total"/>
                    <field name="is_position_dans_produit_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record id="is_product_product_action" model="ir.actions.act_window">
            <field name="name">Variantes d'articles</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,kanban,form,</field>
            <field name="view_id" ref="is_product_product_tree_view"/>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>
