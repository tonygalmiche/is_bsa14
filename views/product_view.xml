        <!-- Recalcul du prix de revient -->
        <record id="is_recalcul_prix_revient_action_server" model="ir.actions.server">
            <field name="name">Recalcul du prix de revient</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">action = records.recalcul_prix_revient_action()</field>
        </record>
        <record id="is_product_template_only_form_view" model="ir.ui.view">
            <field name="name">is_product_template_only_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <button name="%(product.product_variant_action)d" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </button>





            </field>
        </record>

        <!-- product.template -->
        <record id="recalcul_prix_revient_ir_cron" model="ir.cron">
            <field name="name">Recalcul prix de revient</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">model.recalcul_prix_revient_ir_cron()</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
        <record id="is_product_inherit_view" model="ir.ui.view">
            <field name="name">is_product_inherit_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//sheet[1]" position="inside">
                    <style>
                        .o_form_label{
                            white-space: nowrap;
                        }
                    </style>
                </xpath>
                <field name="type" position="after">
                    <field name="is_famille_id"/>
                    <field name="is_stock_category_id"/>
                    <field name="is_type_equipement_id"/>
                </field>                
                <field name="list_price" position="replace">
                    <field name="list_price" attrs="{'invisible': [('sale_ok', '!=', True)]}" />
                </field>
                <field name="active" position="before">
                    <field name="id"/>
                    <field style="background:orange" name="is_doublon" readonly="1" attrs="{'invisible':[('is_doublon','=',False)]}"/>
                    <field name="is_position_dans_produit_ids" widget="many2many_tags"/>
                    <field name="is_ce_en1090" />
                    <field name="is_numero_certificat" attrs="{'invisible': [('is_ce_en1090','!=', True)]}"/>
                    <field name="is_import_par_mail"/>
                </field>
                <field name="standard_price" position="before">
                    <field name="is_recalcul_prix_revient" />
                </field>
                <field name="uom_po_id" position="before">
                    <field name="is_masse_tole" />
                </field>
                <field name="uom_po_id" position="after">
                    <field name="is_simulation_livrable" />
                    <field name="is_article_pour_devis" />
                </field>
                <xpath expr="//page/group[@name='inventory']" position="after">
                     <group name="is_tracabilte" string='Traçabilité'>
                         <field name="is_trace_reception"/>
                         <field name="is_gestion_lot"/>
                     </group>
                </xpath>
                <field name="invoice_policy" position="after">
                    <field name="is_type_livraison"/>
                </field>
                <page name="general_information" position="after">
                    <page string="Cuve" name="cuve">
                        <group string="Cuve">
                            <field name="is_type_cuve_id"/>
                            <field name="is_volume_cuve_id"/>
                        </group>
                        <group string="Niveau de compléxité">
                            <field name="is_cuve_thermoregulation"/>
                            <field name="is_cuve_isolation"/>
                            <field name="is_cuve_compartimente"/>
                            <field name="is_cuve_plafond_mobile"/>
                            <field name="is_cuve_niveau_complexite"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="is_view_product_supplier_inherit" model="ir.ui.view">
            <field name="name">is_view_product_supplier_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.view_product_supplier_inherit" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase']/group[1]" position="before">
                    <group string="Description devis" name="description_devis">
                        <field name="is_description_devis" nolabel="1" placeholder="Description pour les devis paramètrables"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="is_product_template_form_view_procurement_button">
            <field name="name">is_product_template_form_view_procurement_button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <button name="action_open_quants" position="before">
                    <button class="oe_inline oe_stat_button" string="Imprimer" name= "imprimer_etiquette_direct" type="object" icon="fa-print"/>
                </button>
                <button name="action_open_quants" position="before">
                    <button class="oe_inline oe_stat_button" string="Achats" help="Lignes de commandes fournisseur" name= "ligne_commande_action" type="object" icon="fa-shopping-cart" attrs="{'invisible': [('purchase_ok', '=', False)]}" />
                </button>
            </field>
        </record>
        <record id="is_product_template_search_view" model="ir.ui.view">
            <field name="name">is_product_template_search_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="seller_ids" string="Référence fournisseur" filter_domain="[('seller_ids.product_code','ilike',self)]"/>
                    <field name="is_position_dans_produit_ids"/>
                    <field name="id" />
                    <field name="is_famille_id" />
                    <field name="is_stock_category_id" />
                    <field name="is_type_equipement_id" />
                    <field name="is_type_cuve_id" />
                    <field name="is_volume_cuve_id" />
                    <field name="is_cuve_niveau_complexite" />
                </field>

            </field>
        </record>
        <record id="is_product_template_tree_view" model="ir.ui.view">
            <field name="name">is_product_template_tree_view</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="default_code"/>
                    <field name="id"                    optional="hide"/>
                    <field name="is_famille_id"         optional="hide"/>
                    <field name="is_stock_category_id"  optional="hide"/>
                    <field name="is_type_equipement_id" optional="hide"/>
                    <field name="uom_id"                optional="show"/>
                    <field name="list_price"            optional="show"/>
                    <field name="standard_price"        optional="show"/>
                    <field name="qty_available"                sum="Total" string="Quantité disponible" optional="show"/>
                    <field name="virtual_available"            sum="Total" string="Quantité prévue"     optional="show"/>
                    <field name="is_stock_disponible_valorise" sum="Total"                              optional="show"/>
                    <field name="is_stock_prevu_valorise"      sum="Total" optional="show"/>
                    <field name="is_position_dans_produit_ids" widget="many2many_tags"  optional="show"/>
                    <field name="is_type_livraison"         optional="hide"/>
                    <field name="is_type_cuve_id"           optional="hide"/>
                    <field name="is_volume_cuve_id"         optional="hide"/>
                    <field name="is_cuve_niveau_complexite" optional="hide"/>
                    <field name="create_date"               optional="hide"/>
                    <field name="write_date"                optional="hide"/>
                </tree>
            </field>
        </record>
        <record id="is_product_template_action" model="ir.actions.act_window">
            <field name="name">Stock valorisé</field>
